{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "module": "es2020",
    "target": "es6",
    "lib": ["es2015", "es6", "esnext", "dom", "ES2020"],
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "components/*": ["./src/components/*"],
      "modules/*": ["./src/data/modules"]
    },
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true,

  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*"]
}
